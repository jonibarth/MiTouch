<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.grupo110.mitouchmobile.PedirAccesoGruposActivity"
    android:background="#000000">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_marginBottom="10dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/colorVerde"/>

    <ExpandableListView
        android:id="@+id/lvExpNuevoGrupo"
        android:layout_above="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/buttonregistrarUsuarioNuevoGrupo"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitar Acceso"
        android:textStyle="bold"
        android:background="@color/colorVerde"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@+id/lvExpNuevoGrupo" />
</RelativeLayout>
