<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:columnCount="2"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            >

            <ImageView
                android:id="@+id/viewDrive"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="#000000"
                android:layout_margin="3dp"
                android:src="@drawable/ic_googledrive"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/viewGallery"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="3dp"
                android:background="#000000"
                android:src="@drawable/ic_picturesfolder"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/viewChrome"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="3dp"
                android:background="#000000"
                android:src="@drawable/ic_googlechrome"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/viewCalendar"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="3dp"
                android:background="#000000"
                android:src="@drawable/ic_googlecalendar"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/viewCalc"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="3dp"
                android:background="#000000"
                android:src="@drawable/ic_calculator"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/viewChat"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="3dp"
                android:background="#000000"
                android:src="@drawable/ic_chat"
                android:clickable="true"/>

        </GridLayout>
    </ScrollView>

</LinearLayout>