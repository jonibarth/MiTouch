<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorVerde</item>
        <item name="colorPrimaryDark">@color/colorNegro</item>
        <item name="colorAccent">#00B159</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="android:Theme.Holo">
        <item name="android:textColor">@color/colorVerde</item>

        <item name="android:background">@color/colorGrisOscuro</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/colorVerde</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorGrisOscuro</item>
        <item name="android:bottomDark">@color/colorGrisOscuro</item>
        <item name="android:bottomMedium">@color/colorGrisOscuro</item>
        <item name="android:centerBright">@color/colorGrisOscuro</item>
        <item name="android:centerDark">@color/colorGrisOscuro</item>
        <item name="android:centerMedium">@color/colorGrisOscuro</item>
        <item name="android:fullBright">@color/colorGrisOscuro</item>
        <item name="android:fullDark">@color/colorGrisOscuro</item>
        <item name="android:topBright">@color/colorGrisOscuro</item>
        <item name="android:topDark">@color/colorGrisOscuro</item>
    </style>

</resources>
